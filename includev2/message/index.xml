<krpano>

    <action name="show_message">
        if(addvisualiser.enabled == true,
            tween(layer[message].y,23,.5,easeoutquad);
        ,
            tween(layer[message].y,15,.5,easeoutquad);
        );
    </action>

    <action name="hide_message">
        tween(layer[message].y,get(hide-mes),.5,easeinquad);
    </action>

    <layer name="message"
            align="bottomcentre"
            alpha=".7"
            background="false"
            bgcolor="0xdddddd"
            css="color:#FFFFFF; font-family:Arial; font-size:16px; text-align:center;"
            edge="centre"
            handcursor="true"
            html="Model shown is for illustrative purposes only"
            interactivecontent="true"
            keep="true"
            onautosized="if(visible, false, set(y,calc(0 - pixelheight)); set(visible,true); copy(hide-mes,y));"
            onclick="hide_message();"
            url="%SWFPATH%/plugins/textfield.swf"
            visible="false"
            width="320"
            zorder="20"
           />

</krpano>
