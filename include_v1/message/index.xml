<krpano>

    <action name="add_message">
        tween(layer[message].y,0,.5,easeoutquad);
    </action>

    <action name="hide_message">
        tween(layer[message].y,-50,.5,easeoutquad);
        if(device.mobile,tween(layer[message].y,-100,.5,easeoutquad));
    </action>
    
    <layer name        ="message"
           align       ="centerbottom"
           alpha       =".8"
           children    ="false"
           edge        ="centerbottom"
           handcursor  ="false"
           keep        ="true"
           onclick     ="hide_message(); set(layer[message].status,hidden);"
           style       ="title_bg_style"
           status      ="shown"
           url         ="%SWFPATH%/include_brand/message/message.png"
           visible     ="true"
           y           ="-50"
           zorder      ="1"
           onloaded    ="if(device.mobile,set(layer[message].scale,1.6));"
           />

</krpano>
